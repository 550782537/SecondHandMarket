<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/my_cart_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_baseline_broken_image_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/my_cart_commodityName"
        android:contentDescription="picture" />
    <TextView
        android:id="@+id/my_cart_commodityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/commodityname"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@id/my_cart_picture"
        android:layout_marginStart="7sp"
        android:layout_marginTop="3sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/commodityPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/commodityprice"
        android:layout_marginStart="7sp"
        android:layout_marginTop="4sp"
        app:layout_constraintTop_toBottomOf="@id/my_cart_commodityName"
        app:layout_constraintStart_toEndOf="@id/my_cart_picture" />
</androidx.constraintlayout.widget.ConstraintLayout>